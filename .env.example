# Vibe Kanban - Environment Configuration
# Copy this file to .env and uncomment variables to enable features
#
# By default, all external telemetry and API calls are DISABLED
# for air-gapped deployments. Set these variables to opt-in.

# =============================================================================
# TELEMETRY (All disabled by default)
# =============================================================================

# Sentry error reporting - Backend
# SENTRY_DSN=

# Sentry error reporting - Frontend
# VITE_SENTRY_DSN=

# PostHog analytics - Backend
# POSTHOG_API_KEY=

# PostHog analytics - Frontend
# VITE_POSTHOG_API_KEY=
# VITE_POSTHOG_API_ENDPOINT=

# =============================================================================
# EXTERNAL INTEGRATIONS (All disabled by default)
# =============================================================================

# Discord online count widget
# Set to "true" to enable Discord API calls
# VITE_DISCORD_ENABLED=false

# Remote API for shared projects
# VITE_SHARED_API_BASE=
# VK_SHARED_API_BASE=

# =============================================================================
# LOCAL DEVELOPMENT
# =============================================================================

# Server ports (auto-assigned if not set)
# FRONTEND_PORT=3000
# BACKEND_PORT=3001

# Database
# DATABASE_URL=

# Open browser on dev start
# VITE_OPEN=true
